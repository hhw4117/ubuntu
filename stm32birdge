# stm32 <-> ìš°ë¶„íˆ¬ ì—°ê²°

import rclpy
from rclpy.node import Node
from std_msgs.msg import String
import serial
import time

# ==========================================
# 1. ì„¤ì • (í¬íŠ¸ í™•ì¸ í•„ìˆ˜!)
# ==========================================
PORT = '/dev/ttyACM0' # ë˜ëŠ” '/dev/ttyUSB0'
BAUDRATE = 115200

class STM32Bridge(Node):
    def __init__(self):
        super().__init__('stm32_bridge_node')
        
        # ì‹œë¦¬ì–¼ ì—°ê²° ì‹œë„
        try:
            self.ser = serial.Serial(PORT, BAUDRATE, timeout=0.1)
            self.get_logger().info(f"âœ… STM32 Connected on {PORT}")
        except Exception as e:
            self.get_logger().error(f"âŒ Serial Error: {e}")
            exit()

        # ---------------------------------------------------------
        # [í† í”½ êµ¬ë… ì„¤ì •] ì—¬ê¸°ê°€ í•µì‹¬ì…ë‹ˆë‹¤!
        # ì˜ë¯¸: "/stm32/joint" ë¼ëŠ” ë‹¨í†¡ë°©ì— ëˆ„ê°€ ê¸€ì„ ì“°ë©´ 
        #       self.joint_callback í•¨ìˆ˜ë¥¼ ì‹¤í–‰í•´ë¼!
        # ---------------------------------------------------------
        self.subscription = self.create_subscription(
            String,              # ë©”ì‹œì§€ íƒ€ì… (ë¬¸ìì—´)
            '/stm32/joint',      # í† í”½ ì´ë¦„ (ë‹¨í†¡ë°© ì´ë¦„)
            self.joint_callback, # ë©”ì‹œì§€ ì˜¤ë©´ ì‹¤í–‰í•  í•¨ìˆ˜
            10                   # í ì‚¬ì´ì¦ˆ
        )
        
        self.home_subscription = self.create_subscription(
            String,
            '/stm32/home',
            self.home_callback,
            10
        )

        # ì£¼ê¸°ì ìœ¼ë¡œ STM32 ì‘ë‹µì„ í™•ì¸í•˜ê¸° ìœ„í•œ íƒ€ì´ë¨¸ (0.01ì´ˆë§ˆë‹¤ ì‹¤í–‰)
        self.timer = self.create_timer(0.01, self.read_from_stm32)

    # ---------------------------------------------------------
    # ì½œë°± í•¨ìˆ˜: ROS 2 ëª…ë ¹ -> STM32 ì‹œë¦¬ì–¼ ì „ì†¡
    # ---------------------------------------------------------
    def joint_callback(self, msg):
        # ì˜ˆ: í„°ë¯¸ë„ì—ì„œ "1 90.0" ì´ë¼ê³  ë³´ë‚´ë©´ msg.dataì— ë“¤ì–´ì˜´
        cmd = msg.data.strip()
        
        # STM32 í”„ë¡œí† ì½œì— ë§ê²Œ "J" ë¶™ì—¬ì£¼ê¸°
        if not cmd.startswith('J'):
            full_cmd = f"J{cmd}\r\n"
        else:
            full_cmd = f"{cmd}\r\n"
            
        self.ser.write(full_cmd.encode('utf-8'))
        self.get_logger().info(f"ğŸ“¤ Send to STM32: {full_cmd.strip()}")

    def home_callback(self, msg):
        cmd = msg.data.strip()
        if cmd == "ALL":
            full_cmd = "HOME\r\n"
        else:
            full_cmd = f"HOME {cmd}\r\n"
            
        self.ser.write(full_cmd.encode('utf-8'))
        self.get_logger().info(f"ğŸ“¤ Send Home: {full_cmd.strip()}")

    # ---------------------------------------------------------
    # STM32ì—ì„œ ì˜¤ëŠ” ì‘ë‹µ(DONE, BUSY) ì½ê¸°
    # ---------------------------------------------------------
    def read_from_stm32(self):
        if self.ser.in_waiting > 0:
            try:
                line = self.ser.readline().decode('utf-8', errors='ignore').strip()
                if line:
                    # í™”ë©´ì— ì¶œë ¥ (ROS 2 ë¡œê·¸ ë°©ì‹)
                    self.get_logger().info(f"ğŸ“© STM32: {line}")
            except:
                pass

def main(args=None):
    rclpy.init(args=args)
    node = STM32Bridge()
    
    try:
        rclpy.spin(node) # í”„ë¡œê·¸ë¨ì´ ì•ˆ êº¼ì§€ê³  ê³„ì† ë
    except KeyboardInterrupt:
        pass
    finally:
        node.ser.close()
        node.destroy_node()
        rclpy.shutdown()

if __name__ == '__main__':
    main()
